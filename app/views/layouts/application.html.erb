<!DOCTYPE html>
<html>
<head>
  <title>BlogRc250revised</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="container">
    <div id="user_header">
      <% if current_user %>
        Logged in as <%= current_user.email %>
        <%= link_to "Log Out", logout_path %>
      <% else %>
        <%= link_to "Sign Up", signup_path %> or
        <%= link_to "Log In", login_path %>
      <% end %>
    </div>

    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, id: "flash_#{name}" %>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>

<!-- NOTE: 'logout_path' was 'session_path("current"), method: "delete"' -->
<!-- NOTE: 'signup_path' was 'new_user_path' -->
<!-- NOTE: 'login_path' was 'new_session_path' -->
